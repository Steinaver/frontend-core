{
    "compilerOptions": {
        "outDir": "./dist/",
        // Highlights all places where a type is not specified
        // However, this does not mean that `any` cannot be used at all.
        // It only means that in such cases the developer must explicitly write `any`
        "noImplicitAny": true,
        "module": "ESNext",
        // Target specification to compile to: for supporting most browsers
        "target": "es5",
        "jsx": "react-jsx",
        // The compiler will process not only TS files, but also JS files
        "allowJs": true,
        "moduleResolution": "node",
        // For absolute imports
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        // Strict mode
        "strict": true,
        // esModuleInterop allows working with packages that use
        // CommonJS like regular packages using import and export (require() / module.exports) = CommonJS
        // import Moment from 'moment';
        // without the esModuleInterop flag, the result is undefined
        // console.log(Moment);
        // with the flag, the result is [object Object]
        // console.log(Moment);
        "esModuleInterop": true,
        // If a library does not have a default import,
        // loaders like ts-loader or babel-loader automatically create one
        // instead of this import
        // import * as React from 'react';
        // you can write this instead
        // import React from 'react';
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
